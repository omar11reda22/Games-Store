@model CreateformaddedGameVM;
@{
ViewData["Title"] = "add game";

}
<h5>
    <i class="bi bi-plus-circle-dotted"></i>
    Add a New Game
</h5>




<form method="post" asp-controller="Games" asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div class = "col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Name" >
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="categoryID" class="form-label mt-4"></label>
                <select  class="form-select" asp-for="categoryID" asp-items="Model.Categories">
                    <option value="">Selected Category</option>
                </select>
                <span  asp-validation-for="categoryID" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="selecteddevices" class="form-label mt-4"></label>
                <select class="form-select" asp-for="selecteddevices" asp-items="Model.Devices">
                    <option></option>
                </select>
                <span asp-validation-for="selecteddevices" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Discreption" class="form-label mt-4"></label>
                <textarea type="text" class="form-control" asp-for="Discreption" placeholder="Discreption"></textarea>
                <span asp-validation-for="Discreption" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Cover" >
                <small class="form-text text-muted">Only .png .jpg  and max size 1mg</small>
                <span asp-validation-for="Cover" class="text-danger d-block"></span>
            </div>



            <button type="submit" class="btn btn-light text-bg-dark mt-4">
                Saving
            </button>

        </div>
        <div class="col-md-6">

        </div>


    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
}